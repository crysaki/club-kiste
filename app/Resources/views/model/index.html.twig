{% extends 'base.html.twig' %}


{% block admin %}
        <a href="{{ path(modelName ~ '_new') }}">
            <h3 style="text-align: center;">{{ modelName|capitalize }} hinzuf√ºgen
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </h3>
        </a>
{% endblock %}


{% block body %}
    {% for model in models %}
        {% block model %}
            <div class="row featurette">
                {% if loop.index is even %}
                    {% block image %}
                        <div class="col-md-5">
                            <div style="height: 350px; overflow: hidden; margin: 0 0 0 0;">
                                <img class="featurette-image img-responsive"
                                     src="{% block imageSrc %}{{ images_directory ~ model.image }}{% endblock %}"
                                     alt="Generic placeholder image">
                            </div>
                        </div>
                    {% endblock %}
                {% endif %}
                <div class="col-md-7">
                    {% block featurette %}
                        <a href="{{ path( model.modelName ~ '_show', {'id': model.id}) }}">
                            <h2 class="featurette-heading">{{ model.title }}.<span
                                        class="text-muted"> {{ model.subtitle }}.</span>
                            </h2>
                            <p class="lead">{{ model.content|truncate(400) }}</p>
                            {% block footnote %}<p>{{ model.modelName }} Gepostet
                                am: {{ model.updatedAt|date("d.m.Y") }}</p>{% endblock %}
                        </a>
                    {% endblock %}
                    {% if app.user and model.modelName != 'event' %}
                        <a href="{{ path(model.modelName ~ '_edit', { 'id': model.id }) }}" class="btn btn-default">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                        </a>
                    {% endif %}
                </div>
                {% if loop.index is not even %}
                    {{ block('image') }}
                {% endif %}
            </div>
            {% if not loop.last %}
                <hr class="featurette-divider"/>
            {% endif %}
        {% endblock %}
    {% endfor %}
    {% block pagination %}
        <div class="text-center">
            {{ knp_pagination_render(models) }}
        </div>
    {% endblock %}
{% endblock %}