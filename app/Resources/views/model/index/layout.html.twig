{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/index.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}

    {% if app.user %}
        <div class="row">
            <a href="{{ path(modelName ~ '_new') }}"><h3
                        style="text-align: center; float: center;">
                    {{ modelName|capitalize }} hinzuf√ºgen <span class="glyphicon glyphicon-plus"
                                                                aria-hidden="true"></span>
                </h3></a>
        </div>
    {% endif %}

    {% block beforeContent %}{% endblock %}
    <hr>
    <br> <br>
    {% for model in models %}
        <div class="row featurette">
            {% if loop.index is even %}
                {{ include ('model/index/image.html.twig') }}
            {% endif %}
            <div class="col-md-7">
                {% block featurette %}{% endblock %}
                {% if app.user %}
                    <a href="{{ path(modelName ~ '_edit', { 'id': model.id }) }}" class="btn btn-default">
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                    </a>
                {% endif %}
            </div>
            {% if loop.index is not even %}
                {{ include ('model/index/image.html.twig') }}
            {% endif %}
        </div>
        <hr class="featurette-divider"/>
    {% endfor %}
{% endblock %}