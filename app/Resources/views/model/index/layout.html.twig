{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/index.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}

    {% if app.user %}
        <div class="row">
            <a href="{{ path(modelName ~ '_new') }}"><h3
                        style="text-align: center; float: center;">
                    Neuer {{ modelName|capitalize }} <span class="glyphicon glyphicon-plus"
                                                           aria-hidden="true"></span>
                </h3></a>
        </div>
    {% endif %}

    {% block beforeContent %}{% endblock %}
    <hr>
    <br> <br>
    {% for model in models %}
        <div class="row featurette">
            {% if loop.index is even %}
                {{ include ('model/index/image.html.twig') }}
            {% endif %}
            <div class="col-md-7">
                {% if model.link %}<a href="{{ model.link }}">{% endif %}
                    <h2 class="featurette-heading">{{ model.title }}<span class="text-muted"> {{ model.subtitle }}</span>
                    </h2>
                    <p class="lead">{{ model.content|truncate(500) }}</p>
                    {% block contentFooter %}{% endblock %}
                    {% if model.link %}</a>{% endif %}
                {% if app.user %}
                    <a href="{{ path(modelName ~ '_edit', { 'id': model.id }) }}" class="btn btn-default">
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                    </a>
                {% endif %}
            </div> {% if loop.index is not even %}
                {{ include ('model/index/image.html.twig') }}
            {% endif %}
        </div>
        <hr class="featurette-divider" />
    {% endfor %}
{% endblock %}