{% extends 'model/index.html.twig' %}

{% block siteName %}Unsere Freunde{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/links.css') }}" rel="stylesheet">
{% endblock %}

{% block contentFooter %}
    <p>Gepostet am {{ model.createdAt|date("d.m.Y") }} um {{ model.createdAt|date("h:m") }} Uhr</p>
{% endblock %}

{% block featurette %}
    {% if model.link is defined %}<a href="{{ model.link }}">{% endif %}
    <h2 class="featurette-heading">{{ model.title }}
    </h2>
    <p class="lead">{{ model.content }}</p>
    {% if model.link is defined %}</a>{% endif %}
{% endblock %}