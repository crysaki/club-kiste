{% extends 'base.html.twig' %}

{% block siteName %}{{ eventseries.title }}{% endblock %}

{% block body %}

    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">{{ eventseries.title }} Termine</div>
        <div class="panel-body">
            <p><a href="{{ path('eventseries_event_new', {'id': eventseries.id}) }}">Neuen Termin hinzufügen</a></p>
            {% for event in eventseries.events %}
                <p>
                    <a href={{ path('eventseries_event_edit', {'seriesId': eventseries.id, 'eventId': event.id}) }}>
                        {{ event.doorsopen|date('d.m.Y') }}, {{ event.doorsopen|date('H:i') }} Uhr
                    </a>
                </p>
            {% endfor %}
        </div>
    </div>
    <a class="btn btn-default" href="{{ path('eventseries_show', {'id': eventseries.id}) }}">Zurück</a>
{% endblock %}